# ServiceNow Monitor Configuration

# Claude AI Settings
# Set ANTHROPIC_API_KEY environment variable or add api_key here
claude:
  enabled: true  # Enable AI summarization
  api_key: ""  # Leave empty to use ANTHROPIC_API_KEY env var
  model: "claude-sonnet-4-5-20250929"
  max_tokens: 1000
  summarize_filings_count: 3  # Number of most recent filings to summarize
  summarize_releases_count: 5  # Number of most recent press releases to summarize
  summarize_articles_count: 5  # Number of most recent news articles to summarize

# Company to monitor
company:
  name: "ServiceNow"
  ticker: "NOW"  # For SEC filings
  cik: "0001373715"  # SEC Central Index Key

# Data Sources
sources:
  sec_filings:
    enabled: true
    types: ["10-K", "10-Q", "8-K"]

  news:
    enabled: false  # Set to true and provide API key to enable news monitoring
    # Get your FREE API key from: https://newsapi.org/register
    # Can also use NEWS_API_KEY environment variable
    api_key: ""
    keywords: ["ServiceNow", "NOW stock"]

  press_releases:
    enabled: true
    rss_url: "https://www.servicenow.com/company/media/press-room.html"

# Output Settings
output:
  email:
    enabled: false
    smtp_server: "smtp.gmail.com"
    smtp_port: 587
    from_address: "your-email@example.com"
    to_address: "your-email@example.com"
    password: "your-app-password"

  html_dashboard:
    enabled: true
    output_path: "data/dashboard.html"

# Scheduling
schedule:
  frequency: "daily"  # daily, weekly, hourly
  time: "09:00"  # Time to run (24-hour format)

# Microsoft Graph (for internal documents - optional)
microsoft_graph:
  enabled: false
  tenant_id: "your-tenant-id"
  client_id: "your-client-id"
  client_secret: "your-client-secret"
  search_keywords: ["ServiceNow", "company update"]
